import React, { useState, useEffect } from "react";
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Checkbox } from "@/components/ui/checkbox";
import { Alert, AlertDescription } from "@/components/ui/alert";
import { Shield, Lock, FileText, Users } from "lucide-react";

const NDAGateway: React.FC<{ onAccept: () => void }> = ({ onAccept }) => {
  const [isChecked, setIsChecked] = useState(false);
  const [isSubmitting, setIsSubmitting] = useState(false);

  useEffect(() => {
    const consent = sessionStorage.getItem('nda-consent');
    if (consent === 'accepted') {
      onAccept();
    }
  }, [onAccept]);

  const handleAccept = () => {
    if (!isChecked) return;

    setIsSubmitting(true);
    sessionStorage.setItem('nda-consent', 'accepted');
    sessionStorage.setItem('nda-consent-timestamp', new Date().toISOString());

    setTimeout(() => {
      onAccept();
    }, 500);
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-slate-50 to-slate-100 flex items-center justify-center p-4">
      <div className="w-full max-w-4xl">
        <div className="text-center mb-8">
          <div className="inline-flex items-center justify-center w-16 h-16 bg-blue-600 rounded-full mb-4">
            <Shield className="w-8 h-8 text-white" />
          </div>
          <h1 className="text-3xl font-bold text-slate-900 mb-2">Confidential Information Access</h1>
          <p className="text-slate-600">Please review and accept the confidentiality agreement</p>
        </div>

        <Card className="shadow-xl border-0">
          <CardHeader className="bg-slate-50 border-b">
            <CardTitle className="flex items-center gap-2 text-slate-900">
              <Lock className="w-5 h-5" />
              Confidentiality Agreement Notice
            </CardTitle>
            <CardDescription>
              This application contains confidential and proprietary information
            </CardDescription>
          </CardHeader>

          <CardContent className="p-8">
            <div className="space-y-6">
              <Alert className="border-blue-200 bg-blue-50">
                <FileText className="w-4 h-4" />
                <AlertDescription className="text-blue-900">
                  <strong>IMPORTANT NOTICE:</strong> This application contains confidential business information shared between ShinMaywa USA, Inc. and Toray Industries, Inc. for production and certification management purposes.
                </AlertDescription>
              </Alert>

              <div className="bg-slate-50 rounded-lg p-6 border border-slate-200">
                <h3 className="font-semibold text-slate-900 mb-4 flex items-center gap-2">
                  <Users className="w-4 h-4" />
                  Confidentiality Notice
                </h3>

                <div className="space-y-4 text-sm text-slate-700">
                  <div>
                    <p className="font-medium text-slate-900 mb-2">Information Sharing Agreement:</p>
                    <ul className="list-disc list-inside space-y-1 ml-4">
                      <li><strong>ShinMaywa USA, Inc.</strong> - Disclosing Party</li>
                      <li><strong>Toray Industries, Inc.</strong> - Receiving Party</li>
                    </ul>
                  </div>

                  <div>
                    <p className="font-medium text-slate-900 mb-2">Purpose:</p>
                    <p>This application is intended for business use between ShinMaywa USA, Inc. and Toray Industries, Inc. for collaboration on sustainable materials production and ISCC+ certification management.</p>
                  </div>

                  <div>
                    <p className="font-medium text-slate-900 mb-2">Information Types:</p>
                    <ul className="list-disc list-inside space-y-1 ml-4">
                      <li>Production specifications and process data</li>
                      <li>Business operations and planning information</li>
                      <li>Partner relationships and project details</li>
                      <li>Quality assurance and certification data</li>
                      <li>Proprietary methodologies and procedures</li>
                    </ul>
                  </div>

                  <div className="border-t border-slate-200 pt-4">
                    <p className="text-xs text-slate-600 italic">
                      This information is shared for legitimate business purposes between authorized parties.
                      Please maintain appropriate confidentiality and use this system responsibly.
                    </p>
                  </div>
                </div>
              </div>

              <div className="bg-blue-50 border border-blue-200 rounded-lg p-4">
                <p className="text-sm text-blue-900">
                  <strong>Please Note:</strong> This system contains sensitive business information intended for authorized use.
                  Access is granted with the understanding that information will be handled professionally and in accordance with business confidentiality standards.
                </p>
              </div>

              <div className="flex items-start space-x-3 p-4 bg-white rounded-lg border border-slate-200">
                <Checkbox
                  id="nda-accept"
                  checked={isChecked}
                  onCheckedChange={(checked) => setIsChecked(checked as boolean)}
                  className="mt-1"
                />
                <div className="space-y-1">
                  <label
                    htmlFor="nda-accept"
                    className="text-sm font-medium text-slate-900 cursor-pointer hover:text-blue-700 transition-colors"
                  >
                    I understand the information confidentiality
                  </label>
                  <p className="text-xs text-slate-600">
                    By checking this box, I confirm that I understand this system contains business information
                    intended for authorized use between ShinMaywa USA, Inc. and Toray Industries, Inc.
                  </p>
                </div>
              </div>

              <div className="flex justify-center pt-4">
                <Button
                  onClick={handleAccept}
                  disabled={!isChecked || isSubmitting}
                  className="px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-all duration-200 disabled:opacity-50 disabled:cursor-not-allowed"
                  size="lg"
                >
                  {isSubmitting ? (
                    <span className="flex items-center gap-2">
                      <div className="w-4 h-4 border-2 border-white border-t-transparent rounded-full animate-spin" />
                      Processing...
                    </span>
                  ) : (
                    "I Understand - Access Application"
                  )}
                </Button>
              </div>

              <div className="text-center pt-4 border-t border-slate-200">
                <p className="text-xs text-slate-500">
                  This system is intended for authorized business use. Please handle all information responsibly.
                </p>
              </div>
            </div>
          </CardContent>
        </Card>
      </div>
    </div>
  );
};

export default NDAGateway;